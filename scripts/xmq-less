#!/bin/sh

if [ "$1" = "" ]
then
    xmq
    exit 0
fi

if [ -z "$2" ]
then
    if [ -t 0 ]
    then
        if xmq --is-dark-bg
        then
            xmq "$1" render_terminal --color --darkbg | less -R
        else
            xmq "$1" render_terminal --color --lightbg | less -R
        fi
    else
        xmq "$1" render_terminal --color | less -R
    fi
    exit 0
fi

xmq "$@" | less -R
